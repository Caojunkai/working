                        <option value="0">TPL_LARATRVEL_IS_SHOW_FALSE</option>
                </field>
                <!--需要展示行数-->
                <field
                        name="row-picturegrid-num"
                        type="integer"
                        label="TPL_LARATRVEL_FIELD_PICTUREDRID_ROW_LABEL"
                        description=""
                        first="1"
                        last="4"
                        step="1" />
                <!--每一行的列数-->
                <field
                        name="col-picturegrid-num"
                        type="list"
                        label="TPL_LARATRVEL_FIELD_PICTUREDRID_COL_LABEL"
                        description=""
                >
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="6">6</option>
                </field>
                <field
                        name="picturefrid-1"
                        type="media"
