<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field
                name="search"
                type="text"
                label="COM_CONTENT_FILTER_SEARCH_DESC"
                hint="JSEARCH_FILTER"
        />

        <field
                name="diameter"
                type="sql"
                query="SELECT `diameter`  FROM #__weldresource_welding GROUP BY `diameter`"
                key_field="diameter"
                value_field="diameter"
                onchange="this.form.submit();"
        >
            <option value="">直径搜索</option>
        </field>
        <field
                name="name"
                type="sql"
                query="SELECT `name`  FROM #__weldresource_welding GROUP BY `name`"
                key_field="name"
                value_field="name"
                onchange="this.form.submit();"
        >
            <option value="">名称搜索</option>
        </field>
    </fields>
    <fields name="list">
        <field
                name="fullordering"
                type="list"
                label="COM_CONTENT_LIST_FULL_ORDERING"
                description="COM_CONTENT_LIST_FULL_ORDERING_DESC"
                onchange="this.form.submit();"

        >
            <option value="">默认排序</option>
            <option value="a.name ASC">名称正序</option>
            <option value="a.name DESC">焊接倒序</option>
            <option value="a.id ASC">序号正序</option>
            <option value="a.id DESC">序号倒序</option>
            <option value="a.num ASC">编号正序</option>
            <option value="a.num DESC">编号倒序</option>
            <option value="a.brand ASC">牌号正序</option>
            <option value="a.brand DESC">牌号倒序</option>
            <option value="a.diameter ASC">直径正序</option>
            <option value="a.diameter DESC">直径倒序</option>
            <option value="a.density ASC">密度正序</option>
            <option value="a.density DESC">密度倒序</option>
        </field>
        <field
                name="limit"
                type="limitbox"
                class="inputbox input-mini"
                default="25"
                label="COM_CONTENT_LIST_LIMIT"
                description="COM_CONTENT_LIST_LIMIT_DESC"
                onchange="this.form.submit();"
        />
    </fields>
</form>