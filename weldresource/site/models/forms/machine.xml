<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
			<field name="id"
				   type="hidden"
			/>
			<field
			name="num"
			type="text"
			label="COM_WELDER_CODING_LABLE"
			description="COM_WELDER_CODING_DESC"
			size="30"
			maxlength="24"
			required="true"
			/>

			<field
			name="model"
			type="text"
			label="COM_WELDER_MODEL_LABLE"
			description="COM_WELDER_MODEL_DESC"
			size="30"
			maxlength="24"
			/>
		<field
				name="workshop_id"
				type="sql"
				query="SELECT id, name FROM #__weldresource_workshop"
				label="COM_WELDER_WORKSHOPID_LABLE"
				description="COM_WELDER_WORKSHOPID_DESC"
				key_field="id"
				value_field="name"
		/>
			<field
			name="position"
			type="text"
			label="COM_WELDER_POSITION_LABLE"
			description="COM_WELDER_POSITION_DESC"
			size="30"
			maxlength="24"
			/>

			<field
			name="response_person"
			type="sql"
			query="SELECT id, name FROM #__weldresource_welder"
			label="COM_WELDER_PIC_LABLE"
			description="COM_WELDER_PIC_DESC"
			key_field="id"
			value_field="name"
			/>

			<field
			name="use_time"
			type="calendar"
			label="COM_WELDER_USETIME_LABLE"
			description="COM_WELDER_USETIME_DESC"
			size="30"
			maxlength="24"
			/>

			<field
			name="weld_time"
			type="text"
			label="COM_WELDER_HANJIETIME_LABLE"
			description="COM_WELDER_HANJITIME_DESC"
			size="30"
			maxlength="24"
			/>

			<field
			name="maintain_time"
			type="text"
			label="COM_WELDER_BAOYANGTIME_LABLE"
			description="COM_WELDER_BAOYANGTIME_DESC"
			size="30"
			maxlength="24"
			/>

			<field
			name="times"
			type="text"
			label="保养次数"
			description="COM_WELDER_TIMES_DESC"
			size="30"
			disabled="true"
			maxlength="24"
			/>
	</fieldset>
</form>